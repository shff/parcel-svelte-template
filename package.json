{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "clean": "rm -rf .cache dist",
    "lint": "eslint app/**/*.js app/**/*.svelte",
    "lint:watch": "esw app/*.js* app/**/*.js* app/**/*.svelte -w --color --clear",
    "prettify": "prettier --write ./**/*.js",
    "test": "jasmine",
    "e2e": "cypress run -C false --config video=false,integrationFolder=app,supportFile=false,pluginsFile=false,testFiles=**/*.spec.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "parcel": "^1.12.4",
    "parcel-plugin-compress": "^2.0.2",
    "parcel-plugin-inliner": "^1.0.14",
    "parcel-plugin-svelte": "^4.0.6",
    "postcss-remove-unused-css": "^1.0.4",
    "svelte": "^3.29.0"
  },
  "optionalDependencies": {
    "@tivac/eslint-plugin-svelte": "^2.0.0",
    "cypress": "^5.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-unicorn": "^23.0.0",
    "eslint-watch": "^7.0.0",
    "husky": "^4.3.0",
    "jasmine": "^3.6.2",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "browserslist": [
    ">0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-remove-unused-css": {
        "path": "./app",
        "exts": [
          ".js",
          ".svelte",
          ".html"
        ]
      }
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.spec.js",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "svelte3",
      "prettier",
      "promise",
      "no-loops",
      "unicorn",
      "html"
    ],
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "settings": {
      "html/html-extensions": [
        ".html",
        ".svelte"
      ]
    },
    "globals": {
      "document": true
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-new": "off",
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "import/no-unresolved": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
